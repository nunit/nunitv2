<?xml version="1.0"?>
<project name="NUnit.Tests" default="build">

  <include buildfile="../../nunit.project.include"/>

  <property name="current.build.output"
    value="notestfixtures-assembly"/>

  <target name="build" depends="make-build-dir">
    <csc target="library" 
        output="${current.build.dir}/notestfixtures-assembly.dll"
        debug="${build.debug}" define="${build.defines.csc}">
      <sources basedir=".">
        <include name="AssemblyInfo.cs"/>
        <include name="Class1.cs"/>
        <include name="../../CommonAssemblyInfo.cs"/>
      </sources>
    </csc>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/tests/notestfixtures-assembly">
      <fileset basedir=".">
        <include name="*.csproj"/>
        <include name="*.build"/>
        <include name="*.cs"/>
      </fileset>
    </copy>
  </target>
</project>
