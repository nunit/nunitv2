<?xml version="1.0"?>
<project name="NUnit.Mocks.Tests" default="build">

  <include buildfile="../../nunit.project.include"/>

  <property name="current.build.output" value="nunit.mocks.tests"/>

  <target name="build" depends="make-build-dir">
    <csc target="library"
        output="${current.build.dir}/nunit.mocks.tests.dll" 
        debug="${build.debug}" define="${build.defines.csc}">
      <sources basedir=".">
        <include name="AssemblyInfo.cs"/>
        <include name="DynamicMockTests.cs"/>
        <include name="MockTests.cs"/>
      </sources>
      <references basedir="${current.build.dir}">
        <include name="nunit.framework.dll"/>
        <include name="nunit.mocks.dll"/>
      </references>
    </csc>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/NUnitMocks/tests">
      <fileset basedir=".">
        <include name="*.csproj"/>
        <include name="*.build"/>
        <include name="*.config"/>
        <include name="*.cs"/>
      </fileset>
    </copy>
  </target>
</project>
