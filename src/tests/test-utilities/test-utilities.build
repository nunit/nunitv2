<?xml version="1.0"?>
<project name="NUnit.TestsUtilities" default="build">

  <include buildfile="../../nunit.project.include"/>

  <property name="current.build.output" value="test-utilities"/>

  <target name="build" depends="make-build-dir">
    <csc target="library" 
        output="${current.build.dir}/test-utilities.dll" 
        debug="${build.debug}" define="${build.defines.csc}">
      <sources basedir=".">
        <include name="*.cs"/>
        <include name="../../CommonAssemblyInfo.cs"/>
        <exclude name="FormTester.cs" if="${build.mono}"/>
      </sources>
      <references basedir="${current.build.dir}">
        <include name="nunit.framework.dll"/>
        <include name="nunit.core.dll"/>
        <include name="nunit.util.dll"/>
      </references>
    </csc>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/tests/test-utilities">
      <fileset basedir=".">
        <include name="*.csproj"/>
        <include name="*.build"/>
        <include name="*.cs"/>
      </fileset>
    </copy>
  </target>
</project>
